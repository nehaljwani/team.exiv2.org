# print(chr(0xef)) ;
# print(chr(0xbb)) ;
# print(chr(0xbf)) ;


# print(chr(0xff)) ;
# print(chr(0xfe)) ;

binmode(STDOUT, ":utf8");
my $first = 0x20   ; # 0x1000 ;
my $n     = 200    ;
my $end   = $first + $n ;
for ( my $i = $first ; $ i < $end ; $i++ )
{
  	printf("%#8x:%s:",$i,$i) ;
  	print(chr($i)) ;
  	print("\n") ;
}
